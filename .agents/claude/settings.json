{
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(wc:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(head:*)",
      "Bash(mkdir:*)",
      "Bash(rclone tree:*)",
      "Bash(nix flake check:*)",
      "Bash(npx playwright test:*)",
      "Bash(npx wrangler versions view:*)",
      "Bash(git log:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(gh workflow run:*)",
      "Bash(gh repo view:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "WebFetch(domain:docs.sentry.io)",
      "WebFetch(domain:docs.astro.build)",
      "mcp__chrome-devtools__list_pages",
      "mcp__chrome-devtools__navigate_page",
      "mcp__chrome-devtools__take_snapshot",
      "mcp__chrome-devtools__take_screenshot",
      "mcp__chrome-devtools__evaluate_script",
      "mcp__chrome-devtools__resize_page",
      "mcp__cloudflare-docs__search_cloudflare_documentation",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_wait_for",
      "mcp__playwright__browser_close",
      "mcp__plugin_playwright_playwright__browser_navigate",
      "mcp__plugin_playwright_playwright__browser_close",
      "mcp__plugin_playwright_playwright__browser_take_screenshot",
      "mcp__ide__getDiagnostics"
    ],
    "deny": [
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(.env)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(.dev.vars)",
      "Write(.env)",
      "Write(.env.local)",
      "Write(.env.production)",
      "Write(.dev.vars)"
    ],
    "ask": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(mongod:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": []
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Codeが許可を求めています\" with title \"Claude Code\" subtitle \"hooks: Notification\" sound name \"Glass\"'"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Codeがユーザー入力を待機しています\" with title \"Claude Code\" subtitle \"hooks: Notification\" sound name \"Glass\"'"
          }
        ]
      },
      {
        "matcher": "elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude CodeがMCPツール抽出のための入力を求めています\" with title \"Claude Code\" subtitle \"hooks: Notification\" sound name \"Glass\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"タスクが終了しました\" with title \"Claude Code\" subtitle \"hooks: Stop\"'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "github@siraken-plugins": true,
    "common@siraken-plugins": true,
    "dev@siraken-plugins": true,
    "code-review@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "figma@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "agent-sdk-dev@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "linear@claude-plugins-official": true,
    "laravel-boost@claude-plugins-official": true,
    "sentry@claude-plugins-official": true,
    "slack@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "php-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "language": "日本語"
}
